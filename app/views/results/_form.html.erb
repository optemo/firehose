<%= form_for(@result) do |f| %>
  <% if @result.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@result.errors.count, "error") %> prohibited this result from being saved:</h2>

      <ul>
      <% @result.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :product_type %><br />
    <%= f.text_field :product_type, :disabled => true %>
	<%= f.hidden_field :product_type %>
  </div>
  <div class="field">
    <%= f.label "Category ID" %><br />
    <%= f.text_field :category, :disabled => true, :value => Session.category_id %>
	<%= f.hidden_field :category %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
