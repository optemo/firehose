<div>
<h2>Best Selling Products</h2>
<% best_sellers.each_pair do |category,products| %>
  <h4 style="margin-left:20px; margin-bottom:3px;">
    <%= link_to t(category+".name"), featured_path(category), {:class => "link"} %>
  </h4>
  <div class="category">
    <%= render partial: "featured_list", collection: products, :locals => {:cat => category}%>
  </div>
<% end %>
</div>