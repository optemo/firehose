<% case f.feature_type -%>
<% when 'Continuous', 'Categorical', 'Binary' -%>
  <div class='<%= f.used_for %>_box' data-id='<%= f.name %>' data-label='<%= f.name %>' data-type='<%= f.feature_type %>'>
    <% suffix = (f.style == 'asc') ? '_asc' : '' -%>
  	<div>Name: <span class='edit-translation'><%= is_new ? (f.name + suffix) : t(Session.product_type+'.specs.'+ f.name + suffix + '.name') %></span></div>
  	<div>DB name: <%= (f.name + suffix) %></div> 
 	<% case f.used_for -%> 
  <% when 'filter' -%>
      <div>Display: <%= f.get_display %></div>
	    <% unless f.feature_type == 'Binary' -%>
	      <div class='check'><input type="checkbox" value="style" <%= "checked" unless f.style.empty? %>> boldlabel </div>
	    <% end %>
  <% when 'sortby' -%>
	<div>Ordering: 
	  <select class="sort_option" id="sorting_<%= f.name %>">
	    <%= f.style %>
	    <option value="desc" <%= 'selected=selected' if f.style == "desc" %>>Descending</option>
	    <option value="asc" <%= 'selected=selected' if f.style == "asc" %>>Ascending</option>
	  </select>
	</div>
	<% end -%>
	<a class="remove_facet" href="#">Remove</a>
  </div>
<% when 'Heading' -%>
  <div class='<%= f.used_for %>_box' data-id='<%= f.name %>' data-label='<%= f.name %>' data-type='<%= f.feature_type %>'>
    <div>Name: <span class='edit-translation'><%= is_new ? f.name : t(Session.product_type+'.specs.'+f.name+'.name') %></span></div>
    <div>Display: <%= f.get_display  %></div>
    <div class='check'><input type="checkbox" value="style" <%= "checked" unless f.style.empty? %>> boldlabel </div>
    <a class="remove_facet" href="#">Remove</a>
  </div>
<% when 'Spacer' -%>
  <div class='<%= f.used_for %>_box' data-id='space1' data-label='' data-type='<%= f.feature_type %>'>
    <div>Display: <%= f.get_display %></div>
    <a class="remove_facet" href="#">Remove</a>
  </div>
<% end -%>
