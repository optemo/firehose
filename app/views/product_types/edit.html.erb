<% if @errors and @errors.length > 0 %>
  <div id="error_explanation">
    <h2>Errors in adding categories to this product</h2>
    <ul>
    <% @errors.each do |error| %>
      <% error.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end -%>
    <% end -%>
    </ul>
  </div>
<% end %>

<h1>Edit Product Type</h1>

<div id="top_type" data-id="<%= @product_type.id %>" data-name="<%= @product_type.name %>">

<h2><%= @product_type.name %>, product_type_id: <%= @product_type.id %></h2>
  <h3>Categories</h3>
  <% cids = @categories.each do |category| %>
    <dd>
      <%= category.category_id %> <%= category.name %> 
      <%= link_to('Delete', category, :confirm => 'Are you sure you want to remove this category?', :method => :delete, :remote=>true, :class=>'category_id-delete') %>
    </dd>
  <% end %>
<%= render 'tree' %>

<input type="button" id="save_type" value="Save" style="display:block; float:left;">

<%= link_to 'Cancel', product_types_path %>

