<style type="text/css" media="screen">
  .invisible {
  display: none;
  color: green;
  font-style: italic;
  }
  .edit, .edit-select, .edit-select-bool, .edit-select-feature-type,.edit-int {
 color:blue;
  }
  dt a, dd a {
  margin-left: 15px;
  }
 
</style>


<% unless @select_product_types.nil? %>
  <% @select_product_types.each do |pt| %>
    <dd>
      <h2><%= pt.name %></h2>
      <dl class="level1" data-parent-id="<%= pt.id %>">
        <% cids = pt.category_id_product_type_maps.each do |category| %>
          <dd>
            <strong>Category Id: </strong>
            <span class="edit-int" data-id="<%= category.id %>" data-name="category_id_product_type_maps-category_id"><%= category.category_id %></span>
            <%= link_to('Delete', category, :confirm => 'Are you sure?', :method => :delete, :remote=>true, :class=>'category_id-delete') %>
          </dd>
        <% end %>
      
        <dt>
          <%= link_to("Add New Category Id", "/category_ids/new?parent_id=#{pt.id}" ) %>
        </dt>
      
        <%= link_to('Delete', {:action => 'destroy', :id => pt.id}, :method => :delete, :class => 'redirect_delete') %>
      
    </dd>
  <% end %>
<% end %>
