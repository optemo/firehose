<div class='layout'>
  <div class="centered">
  <input type="button" id="submit_layout" value="Save">
  &nbsp;&nbsp;&nbsp;&nbsp;<input type="button" id="reset_layout" value="Reset to default">
  </div>
  <div class='column' id='filters'>
    <h2>Filters</h2>
    <div id='filters_body' class="sortable">
      <% @db_filters.each do |f| -%>
      <div class="draggable">
        <%= render :partial => 'facet_display', :locals => {:f => f} %>
      </div>
      <% end -%>
    </div>
    <div>Add New:
      <div><a id="add_header" href="#">Header</a></div>
      <div><a id="add_spacer" href="#">Spacer</a></div>
      <div>Filter:</div>
      <select id="new_filter" style=" ">
      <!-- check: are the tag attributes necessary? -->
      <option class="filter_option" value="none">Pick One</option>
      <% @sr_filters.each do |f| -%>
        <option class="filter_option" value="<%= f %>"><%= f %></option>
      <% end -%>
      </select>
    </div>
  </div>
  <div class='column' id='sorting'>
  <h2>Sorting</h2>
	<div id='sorting_body' class="sortable">
    <% @db_sortby.each do |f| -%>
    <div class="draggable">
      <%= render :partial => 'facet_display', :locals => {:f => f} %>
    </div>
    <% end -%>
	</div>
  <div>Add New:
    <div>Sorting Option:</div>
    <select id="new_sorting" style=" ">
    <!-- check: are the tag attributes necessary? -->
    <option class="sortby_option" value="none">Pick One</option>
      <% @sr_sortby.each do |f| -%>
        <option class="sortby_option" value="<%= f %>"><%= f %></option>
      <% end -%>
    </select>
  </div>
  </div>
  <div class='column' id='compare'>
  <h2>Compare</h2>  
	<div id='compare_body' class="sortable">
    <% @db_compare.each do |f| -%>
    <div class="draggable">
      <%= render :partial => 'facet_display', :locals => {:f => f} %>
    </div>
    <% end -%>
	</div>
	<div>Add New:
	  <div>Comparison Field:</div>
	  <select id="new_compare", style=" ">
      <option class="compare_option" value="none">Pick One</option>
  	  <% @sr_compare.each do |f| -%>
  	    <option class="compare_option" value="<%= f %>"><%= f %></option>
  	  <% end -%>
	  </select>
	</div>
  </div>
</div>